<%- include('partials/_header') %> <%- include('partials/_navbar') %>
<div class="container">
  <div class="row row-cols-4">
    <div
      class="card col- mx-3 mt-4 bg-light mb-3 text-center"
      style="min-width: 20rem;"
    >
      <img src="#" class="card-img-top" alt="#" />
      <div class="card-body">
        <h5 class="card-title"></h5>
        <h6 class="card-subtitle mb-2 text-muted"></h6>
        <p class="card-text">CREATE PASSWORD</p>
        <a
          href="/passwords/new"
          class="btn btn-primary"
          style="margin-top: 50px;"
          >CREATE</a
        >
      </div>
    </div>
    <% pwds.forEach((pwd) => { %>
    <div
      class="card col- mx-3 mt-4 bg-light mb-3 text-center"
      style="min-width: 20rem;"
    >
      <img src="#" class="card-img-top" alt="#" />
      <div class="card-body">
        <h5 class="card-title"><%= pwd.website_title%></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          URL: <%= pwd.website_url%>
        </h6>
        <p class="card-text">Password: <%= pwd.encrypted_pwd%></p>
        <a href="#modal" data-toggle="modal" data-target="#modal" class="btn btn-primary" id="open-pwd">GO</a>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="Password" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="pwd-info">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<%-include('partials/_footer') %>
