<%- include('partials/_header') %> <%- include('partials/_navbar') %>
<div class="container">
  <div class="row row-cols-4">
    <% if(isUserAdminTrueOrNot) { %>
    <div class="pwd-card card col mx-3 mt-4 bg-light mb-3 text-center">
      <img
        src="https://cdn4.iconfinder.com/data/icons/core-ui-outlined/32/outlined_placeholder-512.png"
        class="card-img-top pwd-img"
        alt="#"
      />
      <div class="card-body">
        <h5 class="card-title">Store New Password</h5>
      </div>
      <div class="card-footer">
        <a
          data-toggle="modal"
          data-target="#modal_makeNewPassword"
          class="btn btn-primary"
          id="open-pwd"
          >Store</a
        >
      </div>
    </div>
    <% } %> <% if (pwds) { pwds.forEach((pwd) => { %>
    <div class="pwd-card card col mx-3 mt-4 bg-light mb-3 text-center">
      <img
        src="https://cdn4.iconfinder.com/data/icons/core-ui-outlined/32/outlined_placeholder-512.png"
        class="card-img-top pwd-img"
        alt="#"
      />
      <div class="card-body">
        <h5 class="card-title"><%= pwd.website_title%></h5>
        <small class="card-subtitle mb-2 text-muted">
          <%= pwd.website_url%>
        </small>
      </div>
      <div class="card-footer">
        <a
          data-toggle="modal"
          data-target="#modal_<%=pwd.id%>"
          class="btn btn-primary"
          id="open-pwd"
          >Check</a
        >
      </div>
    </div>

    <div
      class="modal fade"
      id="modal_<%=pwd.id%>"
      tabindex="-1"
      aria-labelledby="Password"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <form class="modal-content" action='/orgs/<%=pwd.org_id%>/<%=pwd.id%>?_method=PUT' method='POST'>
          <div class="modal-header">
            <h5 class="modal-title" id="title"><%=pwd.website_title%></h5>
          </div>
          <div class="modal-body" id="pwd-info">
            <img
              src="https://cdn4.iconfinder.com/data/icons/core-ui-outlined/32/outlined_placeholder-512.png"
              class="card-img-top pwd-img"
            />
            <div><%= pwd.website_url%></div>
            <div><strong>Username: <%=pwd.website_username%></strong></div>
            <input
              disabled
              class="passwordBox"
              type="text"
              value="<%= pwd.website_pwd%>"
              name="website_pwd"
            />
            <% if(isUserAdminTrueOrNot) { %>
            <div><button class="change">Change Password</button></div>
            <% } %>
            <div><button class="copy">Copy Password</button></div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
    <% }); } %>
    <div
      class="modal fade"
      id="modal_makeNewPassword"
      tabindex="-1"
      aria-labelledby="Password"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="title">Store New Password</h5>
          </div>
          <div class="modal-body" id="pwd-info">
            <form method="POST">
              <div class="form-group">
                <label for="formGroupExampleInput">Website Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="new_title"
                  name="website_title"
                  placeholder="Website Name"
                />
              </div>
              <div class="form-group">
                <label for="formGroupExampleInput">Website URL</label>
                <input
                  type="text"
                  class="form-control"
                  name="website_url"
                  id="new_url"
                  placeholder="https://"
                />
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="formGroupExampleInput">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    name="website_username"
                    id="new_username"
                    placeholder="Username"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="formGroupExampleInput">Password</label>
                  <input
                    type="text"
                    class="form-control"
                    name="website_pwd"
                    id="new_pwd"
                    placeholder="Password"
                  />
                </div>
              </div>
              <button class="btn btn-primary" type="submit">Store</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('partials/_footer') %>
